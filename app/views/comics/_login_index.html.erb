
  <div class="row mb-4">
    <div class="col mx-auto">
        <% all_tags.each do |tag| %>
          <%= link_to "#{tag.name}(#{tag.taggings_count})", comics_path(tag), class:"btn btn-outline-dark m-1" %>
        <% end %>
    </div>
  </div>

  <div class="row">
    <% comics.each do |comic| %>
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 my-3">

        <% if comic.complete == true %>
          <div class="card border-secondary" >
            <div class="card-header text-secondary">
              <% if comic.user == current_user %>
                <%= link_to "" ,edit_comic_path(comic.id),class:"text-decoration-none text-dark fas fa-pen-nib fa-lg left" %>
              <% else %>
                <%= render 'keeps/keep_btn' , comic: comic %>
              <% end %>
                <div class="right">完結済み</div>
            </div>
            <div class="card-body text-dark">
              <h5 class="card-title">『<%= comic.title %>』</h5>
              <p class="card-text"><%= safe_join(comic.memo.split("\n"), tag(:br)) %></p>
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">
              <!--評価機能表示-->
                <span id="star-<%= comic.id %>"></span>
              </li>
                <script>
                $('#star-<%= comic.id %>').raty({
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  scoreName: 'comic[evaluation]',
                  half: true,
                  readOnly: true,
                  score: <%= comic.evaluation %>,
                });
                </script>
              <!--/評価機能表示-->

              <li class="list-group-item">
               <% tags.each do |tag| %>
                  <%= link_to "#{tag.name}(#{tag.taggings_count})", comics_path(tag), class: "label label-default" %>
               <% end %>
                タグとか
              </li>
            </ul>

            <div class="card-footer border-secondary">
              <div class="left"><%= comic.updated_at.strftime('%Y/%m/%d') %></div>
              <% if comic.user == current_user %>
                <div class="right"><%= comic.user.name %></div>
              <% else %>
                <%= link_to user_path(comic.user_id) do %>
                  <div class="text-right">
                    <button type="button" class="btn btn-outline-dark"><%= comic.user.name %></button>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

        <% elsif comic.complete == false %>
          <div class="card border-primary" >
            <div class="card-header text-primary">
              <% if comic.user == current_user %>
                <%= link_to "" ,edit_comic_path(comic.id),class:"text-decoration-none text-dark fas fa-pen-nib fa-lg left" %>
              <% else %>
                <%= render 'keeps/keep_btn' , comic: comic %>
              <% end %>
              <div class="right">未完結</div>
            </div>
            <div class="card-body text-dark">
              <h5 class="card-title">『<%= comic.title %>』</h5>
              <p class="card-text"><%= safe_join(comic.memo.split("\n"), tag(:br)) %></p>
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">
              <!--評価機能表示-->
                <span id="star-<%= comic.id %>"></span>
              </li>
                <script>
                $('#star-<%= comic.id %>').raty({
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  scoreName: 'comic[evaluation]',
                  half: true,
                  readOnly: true,
                  score: <%= comic.evaluation %>,
                });
                </script>
              <!--/評価機能表示-->

              <li class="list-group-item">
               <% tags.each do |tag| %>
                  <%= link_to "#{tag.name}(#{tag.taggings_count})", comics_path(tag), class: "label label-default" %>
               <% end %>
                タグとか
              </li>
            </ul>

            <div class="card-footer border-primary">
              <div class="left"><%= comic.updated_at.strftime('%Y/%m/%d') %></div>
              <% if comic.user == current_user %>
                <div class="right"><%= comic.user.name %></div>
              <% else %>
                <%= link_to user_path(comic.user_id) do %>
                  <div class="text-right">
                    <button type="button" class="btn btn-outline-dark"><%= comic.user.name %></button>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

    </div>
    <% end %>
  </div>
