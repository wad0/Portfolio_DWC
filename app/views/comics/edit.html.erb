<div class="container border border-dark rounded p-3 mt-5">

  <div class="row">
    <div class="col-12 my-4 text-center">
      <h2>コミックス記録の編集</h2>
    </div>
  </div>

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= form_with model:@comic, url:comic_path(@comic), method: :patch, local:true do |f| %>

        <div class="form-group row">
          <%= f.label :作品タイトル ,class:"col-4" %>
          <%= f.text_field :title, class:"col-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :メモ ,class:"col-4" %>
          <%= f.text_area :memo, class:"col-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :完結 , class:"col-4" %>
          <div class="col-4">
          <%= f.radio_button :complete,true %>
          <%= f.label :complete, 'してる', value: true %>
          </div>
          <div class="col-4">
          <%= f.radio_button :complete,false %>
          <%= f.label :complete, 'してない', value: false %>
          </div>
        </div>

        <div class="text-center my-4">
          <%= f.submit :更新する, class:"btn btn-secondary" %>
        </div>
      <% end %>

        <div class="text-center my-4">
          <%= link_to "削除する", comic_path(@comic), method: :delete, data: {confirm:"削除しますか？"}, class:"btn btn-danger" %>
        </div>


    </div>
</div>