<div class="container">

  <div class="row my-5">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <div class="card bg-light">
        <div class="card-body text-center">
          <h2 class="card-title mt-2 mb-5 text-monospace">New comic</h2>
          <p class="card-text">
            <%= form_with model:@comic, url:comics_path, method: :post, local:true do |f| %>

              <div class="form-group row">
                <%= f.label :作品タイトル ,class:"col-5" %>
                <%= f.text_field :title, class:"col-6" %>
              </div>

              <div class="form-group row">
                <%= f.label :メモ ,class:"col-5" %>
                <%= f.text_area :memo, class:"col-6" %>
              </div>

              <div class="form-group row">
                  <%= f.label :完結 , class:"col-5" %>
                <div class="col-3">
                  <%= f.radio_button :complete,true %>
                  <%= f.label :complete, 'してる', value: true %>
                </div>
                <div class="col-3">
                  <%= f.radio_button :complete,false %>
                  <%= f.label :complete, 'してない', value: false %>
                </div>
              </div>

              <!--評価機能-->
              <div class="form-group row" id="star">
                <%= f.label :evaluation,'お気に入り度' ,class:"col-5" %>
                <%= f.hidden_field :evaluation, id: :review_star %>
              </div>
              <script>
              $('#star').raty({
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                scoreName: 'comic[evaluation]',
                half: true,
              });
              </script>
              <!--/評価機能-->

              <!--タグ機能-->
              <div class="form-group row">
                <% @all_tags.each do |tag| %>
                  <%= f.check_box :tag_list, { multiple: true }, "#{tag.name}", nil %>
                  <%= f.label "#{tag.name}(#{tag.taggings_count})" %>
                <% end %>
              </div>
              <!--/タグ機能-->

              <div class="text-center my-4">
                <%= f.submit :記録する, class:"btn btn-secondary" %>
              </div>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>