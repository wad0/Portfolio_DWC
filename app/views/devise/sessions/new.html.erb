<div class="container">

  <div class="row my-5">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <div class="card bg-light">
        <div class="card-body text-center">
          <h3 class="card-title mt-2 mb-5">ログイン</h3>
          <p class="card-text">
            <%= form_with model:@user, url:user_session_path, method: :post, local:true do |f| %>

              <div class="form-group row">
                <%= f.label :ニックネーム ,class:"col-5" %>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-6" %>
              </div>

              <div class="form-group row">
                <%= f.label :パスワード ,class:"col-5" %>
                <%= f.password_field :password, autocomplete: "current-password", class:"col-6" %>
              </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :ログインしたままにする %>
              </div>
            <% end %>

              <div class="text-center my-4">
                <%= f.submit :はじめる, class:"btn btn-secondary" %>
              </div>

            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>