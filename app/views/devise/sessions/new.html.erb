<div class="container">
  <div class="row">
    <div class="col-12 my-4 text-center">
      <h2>ログイン</h2>
    </div>
  </div>

    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= form_with model:@user, url:user_session_path, method: :post, local:true do |f| %>

        <div class="form-group row">
          <%= f.label :ニックネーム ,class:"col-5" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-7" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード ,class:"col-5" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-7" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインしたままにする %>
          </div>
        <% end %>

        <div class="text-center my-4">
          <%= f.submit :はじめる, class:"btn btn-secondary" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
</div>